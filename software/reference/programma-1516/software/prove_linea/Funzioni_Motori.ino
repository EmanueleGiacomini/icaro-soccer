int leggiCorrenteMot(int mot)
{
  // 5V / 1024 ADC counts / 144 mV per A = 34 mA per count
  switch(mot){
  case 0:
    return analogRead(CS1) * 34;
    break;
  case 1:
    return analogRead(CS2) * 34;
    break;
  case 2:
    return analogRead(CS3) * 34;
    break;
  case 3:
    return analogRead(CS4) * 34;
    break;
  }
}


